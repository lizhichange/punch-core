<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/" debug="false">
    <!-- 终端控制台日志 -->
    <appender name="CONSOLE" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="[%d{yy-MM-dd HH:mm:ss,SSS} %-5p] [%t] %c{2\} - %m%n"/>
        </layout>
    </appender>


    <!-- 错误日志 -->
    <appender name="common-error" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="File" value="logs/common-error.log"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="[%d{yy-MM-dd HH:mm:ss,SSS} %-5p] %c{2} - %m%n"/>
        </layout>
        <filter class="org.apache.log4j.varia.LevelRangeFilter">
            <param name="LevelMin" value="ERROR"/>
            <param name="LevelMax" value="ERROR"/>
        </filter>
    </appender>

    <!-- 业务日志 -->
    <appender name="service-impl" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="File" value="logs/service-impl.log"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="[%d{yy-MM-dd HH:mm:ss,SSS} %-5p] %c{2} - %m%n"/>
        </layout>
        <filter class="org.apache.log4j.varia.LevelRangeFilter">
            <param name="LevelMin" value="DEBUG"/>
            <param name="LevelMax" value="WARN"/>
        </filter>
    </appender>
    <logger name="com.fulihui.punch">
        <level value="INFO"/>
        <appender-ref ref="service-impl"/>
    </logger>


    <!-- 埋点日志 -->
    <appender name="mark-point" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="File" value="logs/mark-point.log"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="[%d{dd HH:mm:ss,SSS\} %-5p]-%c{2\}-%m%n"/>
        </layout>
    </appender>
    <logger name="TRACE_POINT_LOG">
        <level value="info"/>
        <appender-ref ref="mark-point"/>
    </logger>

    <root>
        <level value="INFO"/>
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="common-error"/>
    </root>
</log4j:configuration>